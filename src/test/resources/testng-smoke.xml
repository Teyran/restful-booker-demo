<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Smoke Suite">
    <test name="Smoke Tests Only">
        <groups>
            <run>
                <include name="smoke"/>
                <exclude name="defect"/>
            </run>
        </groups>
        <packages>
            <package name="org.example.tests"/>
        </packages>
    </test>
</suite>
